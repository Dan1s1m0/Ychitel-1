<Page x:Class="Ychitel.View.Pages.AuthPages"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ychitel.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPages">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock>Login</TextBlock>
            <TextBox x:Name="LogInTextBox"></TextBox>
            <TextBlock>Password</TextBlock>
            <PasswordBox x:Name="AuthPasswordBox"></PasswordBox>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="SignInButton" Click="SignInButtonClick">Login</Button>
                <Button x:Name="RegTextBlock" Click="RegTextBlockClick">Register</Button>
            </StackPanel>
            
        </StackPanel>
    </Grid>
</Page>
