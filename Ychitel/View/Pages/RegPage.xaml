<Page x:Class="Ychitel.View.Pages.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ychitel.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <UniformGrid>
                <TextBlock>Введите логин </TextBlock>
                <TextBox x:Name="RegLoginTextBlock"></TextBox>
            </UniformGrid>
            <UniformGrid>
                <TextBlock>Введите пароль</TextBlock>
                <TextBox x:Name="RegPasswordTextBlock"></TextBox>
            </UniformGrid>
            <UniformGrid>
                <TextBlock>Повторите пароль</TextBlock>
                <TextBox></TextBox>
            </UniformGrid>
            <UniformGrid>
                <Button x:Name="SignInButton" Click="RegInButtonClick">Создать</Button>
            </UniformGrid>
        </StackPanel>
    </Grid>
</Page>
